<Window x:Class="FinalTerm_Project_EMS.EMSLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalTerm_Project_EMS"
        mc:Ignorable="d"
        Title="EMSLogin" Height="270" Width="445">
    <Grid>
        <GroupBox Header="Attendance Managment Login" Height="236" VerticalAlignment="Top" HorizontalAlignment="Left" Width="424"/>
        <Label Content="Email" HorizontalAlignment="Left" Height="33" Margin="48,61,0,0" VerticalAlignment="Top" Width="72"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="33" Margin="48,99,0,0" VerticalAlignment="Top" Width="72"/>
        <TextBox x:Name="tbx_email" HorizontalAlignment="Left" Height="24" Margin="125,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="255"/>
        <PasswordBox x:Name="tbx_password" HorizontalAlignment="Left" Height="25" Margin="125,99,0,0" VerticalAlignment="Top" Width="255"/>
        <Button x:Name="btn_login" Background="LightGreen" Content="Login" HorizontalAlignment="Left" Height="21" Margin="48,137,0,0" VerticalAlignment="Top" Width="332" Click="btn_login_Click"/>
    </Grid>
</Window>
