        <Label Content="Contact#" HorizontalAlignment="Left" Margin="22,151,0,0" VerticalAlignment="Top" Height="28"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="18,16,0,0" VerticalAlignment="Top" Height="26"/>


        <Button x:Name="Button_GetEmployee" Content="Search Employee" HorizontalAlignment="Left" Margin="220,17,0,0" VerticalAlignment="Top" Width="168" Click="Button_GetEmployee_Click"/>
